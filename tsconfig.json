{
  "compilerOptions": {
    // No module system, concatenated file
    "module": "es6",

    // Target ES5 for compatibility
    "target": "es5",

    // Set React as the JSX factory
    "jsx": "react",

    // Enable ES module interops
    "esModuleInterop": true,

    // Resolve modules using Node-resolution algorithm
    "moduleResolution": "node",

    // Include typings from built-in lib declarations
    "lib": ["es2015", "dom", "dom.iterable"],

    // Include module source maps for debugging
    "sourceMap": true,

    // Remove comments in output JS
    "removeComments": true,

    // Disable any type
    "noImplicitAny": true
  },
  "include": ["src/*.tsx", "src/*.ts", "global.d.ts"]
}